%nav.navbar(ng-controller="HeaderCtrl")
  .container
    .navbar-header
      %a.navbar-brand{:href => "#"} {{siteName}}
    %div
      %ul.nav.navbar-nav(ng-repeat="header in headers")
        %li(ng-class="$index == 0 ? 'active': '' ")
          %a{:href => "#"}
            {{header}}
      %ul.nav.navbar-nav.navbar-right
        %li
          %a{:href => "#"}
            %span.glyphicon.glyphicon-user
            Sign Up
        %li
          %a{:href => "#"}
            %span
            Login