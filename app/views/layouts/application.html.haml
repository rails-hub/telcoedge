!!!
%html
  %head
    %title= content_for?(:title) ? yield(:title) : "Telcoedge"
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" }
    %meta{ :content => content_for?(:description) ? yield(:description) : "Telcoedge", :name => "description" }
    %link{ :href => "https://fonts.googleapis.com/css?family=Open+Sans:400italic,400,600,300,700", :rel => "stylesheet", :type => "text/css" }
    = stylesheet_link_tag :application, :media => "all"
    = javascript_include_tag :application
    = csrf_meta_tags
    = yield(:head)

  %body(ng-app="Telcoedge")
    .container-fluid
      .row.row-offcanvas.row-offcanvas-right
        %header.header
          = render '/layouts/header'
    
        #main{ :role => "main" }
          = yield


    = render "/layouts/footer"
